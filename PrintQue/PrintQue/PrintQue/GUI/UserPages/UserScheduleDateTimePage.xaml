<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PrintQue.GUI.UserPages.UserScheduleDateTimePage">
    <ContentPage.Content>

        <StackLayout>
            <Label Text="Select a time"/>
            <TimePicker x:Name="TimePicker">
                <TimePicker.Format>hh:mm tt</TimePicker.Format>
            </TimePicker>

            <Label Text="Select a date"/>
            <DatePicker x:Name="DatePicker"></DatePicker>

            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                <Button x:Name="Submit" Text="Submit" Clicked="Submit_Clicked"></Button>
                <Button x:Name="Cancel" Text="Cancel" Clicked="Cancel_Clicked"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>