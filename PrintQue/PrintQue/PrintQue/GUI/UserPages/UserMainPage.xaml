<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    NavigationPage.HasBackButton="False"
    xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PrintQue.UserMainPage">

    <StackLayout>
        <ListView x:Name="PrinterListView" 
                  HasUnevenRows="True" 
                  IsPullToRefreshEnabled="true" 
                  Refreshing="PrinterListView_Refreshing" 
                  ItemsSource="{Binding Printers}"
                  ItemSelected="PrinterListView_ItemSelected"
                  >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" Padding="5">
                            <StackLayout HorizontalOptions="StartAndExpand">
                                <Label Text="{Binding Name}" TextColor="Black"/>
                                <Label Text="{Binding status.Name}"/>
                            </StackLayout>
                            <Button x:Name="PrinterButton" Text="Request" 
                                    Clicked="PrinterListView_Button"
                                    CommandParameter="{Binding .}"/>



                        </StackLayout>
                    </ViewCell>

                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>