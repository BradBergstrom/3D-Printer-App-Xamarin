<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PrintQue.RegisterPage">


        <StackLayout VerticalOptions="Center" Margin="30,10" >
            <StackLayout HeightRequest="40" VerticalOptions="End">
                <ActivityIndicator IsRunning="{Binding IsBusy, Mode=TwoWay}"
                             IsVisible="{Binding IsBusy, Mode=TwoWay}"
                              HeightRequest="40"
                              VerticalOptions="CenterAndExpand"
                              HorizontalOptions="CenterAndExpand">
                    <ActivityIndicator.WidthRequest>
                        <OnPlatform x:TypeArguments="x:Double" iOS="100" Android="100" />
                    </ActivityIndicator.WidthRequest>
                    <ActivityIndicator.Color>
                        <OnPlatform x:TypeArguments="Color"
                          iOS="#2499CE" />
                    </ActivityIndicator.Color>
                </ActivityIndicator>
            </StackLayout>
        <Entry x:Name="FirstNameEntry" Placeholder="First Name" Text="{Binding FirstName, Mode=TwoWay}"/>
        <Entry x:Name="LastNameEntry" Placeholder="Last Name" Text="{Binding LastName, Mode=TwoWay}"/>
        <Entry x:Name="userNameEntry" Placeholder="Email Adress" Keyboard="Email" Text="{Binding Email, Mode=TwoWay}"/>
        <Entry x:Name="userPasswordEntry" Placeholder="Password" IsPassword="True" Text="{Binding Password, Mode=TwoWay}"/>
        <Entry x:Name="PasswordConfirmEntry" Placeholder="Confirm Password" IsPassword="True" Text="{Binding confirmPassword, Mode=TwoWay}"/>
        <Button x:Name="LoginButton" Text="Register" Command="{Binding RegisterCommand}" CommandParameter="{Binding User}" Margin="0,35"  BackgroundColor="DodgerBlue" TextColor="White"/>
    </StackLayout>
</ContentPage>